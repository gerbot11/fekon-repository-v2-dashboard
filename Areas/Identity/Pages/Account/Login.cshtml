<body class="hold-transition login-page">
    <div class="login-box">

        <div class="card card-outline card-success">
            <div class="card-header text-center">
                <img src="~/images/feb.png" width="100%"/>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Administrator Login</p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Username" asp-for="Input.Username">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember" asp-for="Input.RememberMe">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>

                        <div class="col-4">
                            <button type="submit" class="btn btn-success btn-block">Log In</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>

    </div>
    <script src="~/temp/plugins/jquery/jquery.min.js"></script>
    <script src="~/temp/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
