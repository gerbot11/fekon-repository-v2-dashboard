@model Author
@{
    ViewData["Title"] = "New Author";
}

@section contentHeader {
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Authors</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Authors</a></li>
                <li class="breadcrumb-item active">New Author</li>
            </ol>
        </div>
    </div>
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-outline card-info">
                <div class="card-header">
                    <h3 class="card-title">
                        Author Details
                    </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Author No</label>
                                <input asp-for="AuthorNo" class="form-control" />
                                <span asp-validation-for="AuthorNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Author Contribution</label>
                                <select asp-for="IsAdvisor" asp-items="ViewBag.ListIsAdvisiorStat" class="form-control">
                                    <option value="x">--Select Contribution--</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col-md-6">
            <a class="btn btn-danger" asp-action="Index"><i class="fas fa fa-times-circle"></i> Cancel</a>
            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Submit</button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}