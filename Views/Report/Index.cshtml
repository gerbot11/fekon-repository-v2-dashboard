
@{
    ViewData["Title"] = "Dashboard";
}
@section contentHeader {
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Report</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item active"><a href="#">Report</a></li>
            </ol>
        </div><!-- /.col -->
    </div><!-- /.row -->
}

<div class="row">
    <div class="col-md-6">
        <form class="card card-cyan" method="post" asp-action="Print">
            <div class="card-header">
                <h3 class="card-title">Report Repository Publish Per Year</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Year</label>
                            <select class="form-control" asp-items="ViewBag.ListYear" name="year" id="year">
                                
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success"><i class="fas fa-print"></i> Print</button>
            </div>
        </form>
    </div>
</div>