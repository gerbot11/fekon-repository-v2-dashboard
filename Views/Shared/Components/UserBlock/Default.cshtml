                <a class="btn btn-default btn-flat" asp-controller="User" asp-action="AdminInformation" asp-route-id="@Model.RefEmployee.UserId">Profile</a>

                <button type="submit" class="btn btn-default btn-flat float-right">Sign out</button>
            </form>
        </li>
    </ul>
</li>