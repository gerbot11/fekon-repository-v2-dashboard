<script>
    $(document).ready(function () {
        $('#penulis').select2({
            ajax: {
                url: '@Url.ActionLink(action: "GetResultAuthor", protocol:"https")',
                delay: 300,
                data: function (params) {
                    var query = {
                        q: params.term,
                    }
                    return query;
                }
            },
            processResults: function (data, params) {
                return {
                    results: data.items,
                };
            },
            minimumInputLength: 3,
            cache: true
        })

        $('#pembimbing').select2({
            ajax: {
